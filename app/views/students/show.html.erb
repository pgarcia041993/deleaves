
<p id="notice"><%= notice %></p>
<img src="/images/c<%= @student.cohort %>/<%= @student.number %>.jpg" style="position:relative; top: 40px; margin-left: 480px; height: 500px; width: 300px;"/>
<div style="padding-left: 20px">
  <p style="font-size: 31px; padding-top:20px; margin-top: -500px; padding-bottom: 5px; font-weight: bold; ">
    <%= @student.name %>
  </p>

  <p>
    <b>Number:</b>
    <%= @student.number %>
  </p>

  <p>
    <b>Cohort:</b>
    <%= @student.cohort %>
  </p>

  <p>
    <b>Learning team:</b>
    <%= @student.learning_team %>
  </p>

  <table width="280px">
    <tr style="background-color: rgb(13, 17, 46);">
      <th style="color: #ffffff;">Subject</th>
      <th style="color: #ffffff;">Grade</th>
      <th style="color: #ffffff;">What if</th>
    </tr>
    <% $count = 0; %>
    <% $divide = 0; %>
    <% @grades.each do |grade| %>
        <% if grade.present? %>
            <% $count = $count + 1 %>
        <% end %>
        <tr>
          <td><%= grade.temporary_subject_code %></td>
          <% if (grade.temporary_subject_code.present? and !(['Pass', 'Fail'].include?(grade.grade))) %>
              <% if grade.temporary_subject_code == 'LOB' %>
                  <% $divide = $divide + 1.5 %>
              <% elsif grade.temporary_subject_code == 'OM'%>
                  <% $divide = $divide + 2 %>
              <% elsif grade.temporary_subject_code == 'MC'%>
                  <% $divide = $divide + 1.5 %>
              <% elsif grade.temporary_subject_code == 'FM1' %>
                  <% $divide = $divide + 1 %>
              <% elsif grade.temporary_subject_code == 'QA' %>
                  <% $divide = $divide + 2 %>
              <% elsif grade.temporary_subject_code == 'ECON'%>
                  <% $divide = $divide + 2 %>
              <% elsif grade.temporary_subject_code == 'MCP'%>
                  <% $divide = $divide + 2 %>
              <% elsif grade.temporary_subject_code == 'MM' %>
                  <% $divide = $divide + 2.5 %>
              <% elsif grade.temporary_subject_code == 'MPO' %>
                  <% $divide = $divide + 2 %>
              <% elsif grade.temporary_subject_code == 'BIZNET'%>
                  <% $divide = $divide + 1 %>
              <% elsif grade.temporary_subject_code == 'MOL'  %>
                  <% $divide = $divide + 0 %>
              <% end %>
          <% end %>

          <td>
            <input type="hidden" name="subject<%= $count %>" value="<%= grade.temporary_subject_code %>" id="subject<%= $count %>">
            <input type="text" style="width:50px; height:15px; text-align: center;" class="gradeorig grade-orig<%= $count %>" name="" readonly value="<%= grade.grade %>"/>
          </td>
          <td style="padding-left: 25px">
            <% if grade.grade == 'Pass' or grade.grade == 'Fail' or grade.grade == nil %>
                <input style="width:50px; height:15px; text-align: center;" type="text" name="" class="grade grade-new<%= $count %>" id="grade-new" readonly/>
            <% else %>
                <input style="width:50px; height:15px; text-align: center;" type="text" name="" class="grade grade-new<%= $count %>" id="grade-new"/>
            <% end %>
          </td>
    <% end %>
    <input type="hidden" name="divide" value="<%= $divide %>" id="divide">
    <!-- INSERT SCRIPT HERE -->
    </tr>
  </table>
  <table width="280px">
    <tr>
      <td style="font-weight: bold">Term GPA</td>
      <td style="color: #ff0000">
        <input id="final-orig" style="width:50px; height:15px; color:red; font-weight:bold; background-color:transparent; border: 0px solid;" type="text" readonly/>
      </td>
      <td style="color: #ff0000">
        <input id="final-new" style="width:50px; height:15px; color:red; font-weight:bold; background-color:transparent; border: 0px solid;" type="text" readonly/>
      </td>
    </tr>
  </table>
  <input type="hidden" name="count" value="<%= $count %>" id="count">
</div>
