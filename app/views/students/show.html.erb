<p id="notice"><%= notice %></p>

<p>
  <b>Number:</b>
  <%= @student.number %>
</p>

<p>
  <b>Name:</b>
  <%= @student.name %>
</p>

<p>
  <b>Cohort:</b>
  <%= @student.cohort %>
</p>

<p>
  <b>Learning team:</b>
  <%= @student.learning_team %>
</p>

<table>
  <tr>
    <th>Subject</th>
    <th>Grade</th>
  </tr>
  <% @grades.each do |grade|%>
  <tr>
    <td><%= grade.temporary_subject_code %></td>
    <td><%= grade.grade %></td>
  </tr>
  <% end %>
</table>

<%= link_to 'Edit', edit_student_path(@student) %> |
<%= link_to 'Back', students_path %>
