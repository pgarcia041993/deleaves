<h1>Listing grades</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Temporary subject code</th>
    <th>Grade</th>
    <th>Student</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @grades.each do |grade| %>
  <tr>
    <td><%= grade.subject_id %></td>
    <td><%= grade.temporary_subject_code %></td>
    <td><%= grade.grade %></td>
    <td><%= grade.student_id %></td>
    <td><%= link_to 'Show', grade %></td>
    <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
    <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

