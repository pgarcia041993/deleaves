<h1>Listing subject_summaries</h1>

<table>
  <tr>
    <th>Subject code</th>
    <th>Description</th>
    <th>Professor</th>
    <th>Units</th>
    <th>Cohort</th>
    <th>Term</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @subject_summaries.each do |subject_summary| %>
  <tr>
    <td><%= subject_summary.subject_code %></td>
    <td><%= subject_summary.description %></td>
    <td><%= subject_summary.professor %></td>
    <td><%= subject_summary.units %></td>
    <td><%= subject_summary.cohort %></td>
    <td><%= subject_summary.term %></td>
    <td><%= link_to 'Show', subject_summary %></td>
    <td><%= link_to 'Edit', edit_subject_summary_path(subject_summary) %></td>
    <td><%= link_to 'Destroy', subject_summary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

